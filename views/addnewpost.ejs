<%- include("./partials/header") %>
<%- include("./partials/nav") %>
<div class="w-full h-screen bg-zinc-800 text-white px-10 py-5">
    <h1 class="text-lg">Create new Post</h1>
    <hr class="opacity-10 mt-2">

    <form class="text-black" action="/createPost" method="post" enctype="multipart/form-data">
        <input class="mt-3 pt-3  w-1/3" type="file" name="postImage">
        <br>
        <br>
        <input class="mt-3 border-2 py-2 px-4 w-1/3 rounded-md" type="text" name="postTitle" placeholder="Title">
        <br>
        <br>
        <textarea class="mt-3 border-2 py-2 px-4 w-1/3 h-60 rounded-md " name="postDescription" placeholder="Description"></textarea>
        <br>
        <br>
        <input class="mt-3 bg-red-600 rounded-md py-2 px-4 w-1/3" type="submit" value="Create Post">
        <br>
        <br>
    </form>

</div>
<%- include("./partials/footer") %>